# === DOCLING SERVE (GPU MODE) ===
LOG_LEVEL=info
LOG_FORMAT=json
DOCLING_LOG_LEVEL=info
DOCLING_SERVE_LOG_LEVEL=info

# Core pipeline toggles
DOCLING_SERVE_ENABLE_UI=false
DOCLING_SERVE_ENABLE_REMOTE_SERVICES=false
DOCLING_SERVE_SINGLE_USE_RESULTS=false
DOCLING_SERVE_RESULT_REMOVAL_DELAY=1800
DOCLING_SERVE_MAX_DOCUMENT_TIMEOUT=1800
DOCLING_SERVE_MAX_SYNC_WAIT=900
DOCLING_SERVE_MAX_FILE_SIZE=104857600
DOCLING_SERVE_SCRATCH_PATH=/tmp/docling-scratch
DOCLING_SERVE_OPTIONS_CACHE_SIZE=4
DOCLING_SERVE_LOAD_MODELS_AT_BOOT=true
DOCLING_SERVE_QUEUE_MAX_SIZE=50
DOCLING_SERVE_ARTIFACTS_PATH=/docling-artifacts

# Shared volume with OpenWebUI
DOCLING_SHARED_VOLUME_PATH=/docling-shared

# Local engine workers
DOCLING_SERVE_ENG_KIND=local
DOCLING_SERVE_ENG_LOC_NUM_WORKERS=8

# GPU binding (container receives CUDA_VISIBLE_DEVICES via docker compose)
DOCLING_DEVICE=cuda:0
DOCLING_NUM_THREADS=4
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8
TORCH_NUM_THREADS=8
OPENBLAS_NUM_THREADS=8
NUMEXPR_NUM_THREADS=8

# OCR defaults
EASYOCR_LANG_LIST=en,de,fr,it
DOCLING_OCR_LANGUAGES=en,de,fr,it
DOCLING_OVERRIDE_OCR_LANGUAGES=true
EASYOCR_GPU=false
EASYOCR_FORCE_CPU=true
DOCLING_FORCE_EASYOCR=true
DOCLING_DEFAULT_OCR_ENGINE=easyocr
DOCLING_OCR_ENGINE=easyocr

# Health/reporting tweaks
DOCLING_SERVE_MAX_POLL_ATTEMPTS=600
DOCLING_POLL_INTERVAL=3
DOCLING_RETRY_ATTEMPTS=3
DOCLING_RETRY_DELAY=10
